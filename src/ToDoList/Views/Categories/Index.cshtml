@model IEnumerable<ToDoList.Models.Category>

@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>To Do List</h2>
<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Items)
        </th>*@
        <th></th>
    </tr>

    @foreach (var listCategory in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelCategory => listCategory.Name)
            </td>
            @*<td>
                @foreach (var listItem in listCategory.Items)
                {
                   
                    @Html.DisplayFor(modelCategory => listItem.Description) <br>
                   
                }
            </td>*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = listCategory.CategoryId }) |
                @Html.ActionLink("Details", "Details", new { id = listCategory.CategoryId }) |
                @Html.ActionLink("Delete", "Delete", new { id = listCategory.CategoryId })
            </td>
        </tr>
    }
</table>
<p>
